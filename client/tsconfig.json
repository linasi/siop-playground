{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext", // Ensures we get tree shaking with webpack
    "moduleResolution": "node",
    "strict": true,
    "lib": ["dom", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
  }
}
